<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PGPProject.Views.InfoPage"
             xmlns:vm="clr-namespace:PGPProject.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:InfoViewModel />
    </ContentPage.BindingContext>
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Aplikacja jest przedmiotem pracy inżynierskiej autorstwa studenta: Mieszko Chmura."
           TextColor="Black"
           FontAttributes="Bold"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center" />

        <Label Text="Jest to jej jedyna i oficjalna wersja. Została napisana w środowisku Visual Studio z użyciem Xamarin.Forms i korzysta z biblioteki Bouncy Castle" 
           TextColor="Black"
           FontAttributes="Bold"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center" />
    </StackLayout>


</ContentPage>
